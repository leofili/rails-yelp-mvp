<h2><%= @restaurant.name %></h2>
<%= link_to "Edit restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "My restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant), class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %>/5 <%= link_to "Remove",
                  review_path(review),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= render "reviews/new", review: @review %>